if(keyboard_check(vk_right) || keyboard_check(ord('d')) || sprite_index == Player_R) {
	sprite_index = PlayerAttack_R;
	attack_cx = (x + sprite_width + global.attack_distance) / 2;
} else {
	sprite_index = PlayerAttack_L;
	attack_cx = (x + sprite_width - global.attack_distance) / 2;
}
attack_cy = (y + sprite_height) / 2;
with Enemy {
	
	cy = (y + sprite_height);
	dx = point_distance(
		attack_cx, attack_cy,
		(x + sprite_width) / 2, cy);
	if(dx < global.attack_distance && abs(cy - attack_cy) < global.attack_maxYdiff ) {
		execute_file("destroy_enemy");
	}
}
