if(!irandom(1)) {
	x = 0;
} else {
	x = room_width-10;
}

y = room_height-random(200);


if(global.level <= 3) {
	if(!irandom(2)) {  //one in three chance 
		instance_create(x, y, Camel);  //slower, but more powerful
	} else {
		instance_create(x, y, Lion);
	}
} else {
	instance_create(x, y, Enemy);
}
