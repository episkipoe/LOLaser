if(!irandom(1)) {
	x = 0;
} else {
	x = room_width-10;
}

y = irandom_range(global.min_y, global.max_y); 


if(global.level < 2) {
	if(!irandom(2)) {  //one in three chance 
		instance_create(x, y, Camel);  //slower, but more powerful?
	} else {
		instance_create(x, y, Lion);
	}
} else {
	if(!irandom(2)) {
		instance_create(x, y, Bear);  //slower, but more powerful?
	} else {
		instance_create(x, y, Lion);
	}
}
